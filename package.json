{
  "name": "@diskette/nex",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "build": "rm -rf dist && tsc",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo",
    "prepublishOnly": "pnpm build"
  },
  "exports": {
