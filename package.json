      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "nex": "./dist/cli.js"
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "@vanilla-extract/css": "^1"
  },
  "dependencies": {
    "@ts-morph/bootstrap": "^0.28.1",
    "@vanilla-extract/integration": "8.0.6",
    "esbuild": "^0.27.0",
    "tiny-invariant": "^1.3.3",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/node": "24.10.1",
    "@vanilla-extract/css": "^1.17.5",
    "prettier": "^3.4.2",
    "tsx": "^4.20.6",
    "typescript": "5.9.3",
    "vitest": "4.0.14"
  },
  "packageManager": "pnpm@10.22.0",
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
